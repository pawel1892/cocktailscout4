<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow-md border border-gray-200">
  <h1 class="text-2xl font-bold mb-6 text-center text-cs-dark-red">Login</h1>

  <%= tag.div(flash[:alert], class: "mb-4 text-red-600 bg-red-50 p-3 rounded") if flash[:alert] %>
  <%= tag.div(flash[:notice], class: "mb-4 text-green-600 bg-green-50 p-3 rounded") if flash[:notice] %>

  <%= form_with url: session_path do |form| %>
    <div class="form-group">
      <%= form.label :email_address, "Email oder Benutzername", class: "label-field" %>
      <%= form.text_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Email oder Benutzername", class: "input-field", value: params[:email_address] %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Passwort", class: "label-field" %>
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Passwort eingeben", maxlength: 72, class: "input-field" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Anmelden", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm space-y-2">
    <div>
      <%= link_to "Passwort vergessen?", new_password_path, class: "text-gray-500 hover:text-cs-dark-red" %>
    </div>
    <div class="pt-2 border-t border-gray-100">
      Noch kein Konto? <%= link_to "Jetzt registrieren", new_registration_path, class: "text-cs-dark-red font-medium hover:underline" %>
    </div>
  </div>
</div>