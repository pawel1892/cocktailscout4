<div class="max-w-md mx-auto mt-10 p-6 bg-white rounded shadow-md border border-gray-200">
  <h1 class="text-2xl font-bold mb-6 text-center text-cs-dark-red">Registrieren</h1>

  <%= tag.div(flash[:alert], class: "mb-4 text-red-600 bg-red-50 p-3 rounded") if flash[:alert] %>
  
  <%= form_with model: @user, url: registration_path do |form| %>
    <% if @user.errors.any? %>
      <div class="callout-red mb-6">
        <ul class="list-disc pl-5 text-sm">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :username, "Benutzername", class: "label-field" %>
      <%= form.text_field :username, required: true, autofocus: true, autocomplete: "username", placeholder: "Benutzername", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= form.label :email_address, "Email Adresse", class: "label-field" %>
      <%= form.email_field :email_address, required: true, autocomplete: "email", placeholder: "name@example.com", class: "input-field" %>
    </div>

    <div class="form-group">
      <%= form.label :password, "Passwort", class: "label-field" %>
      <%= form.password_field :password, required: true, autocomplete: "new-password", placeholder: "Mindestens 6 Zeichen", maxlength: 72, class: "input-field" %>
      <p class="form-hint">Mindestens 6 Zeichen.</p>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, "Passwort bestÃ¤tigen", class: "label-field" %>
      <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Passwort wiederholen", maxlength: 72, class: "input-field" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Registrieren", class: "btn btn-primary w-full" %>
    </div>
  <% end %>

  <div class="mt-4 text-center text-sm">
    Bereits registriert? <%= link_to "Login", new_session_path, class: "text-cs-dark-red hover:underline" %>
  </div>
</div>
