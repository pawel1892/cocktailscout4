<% else %>
<% case recipe_image.state %>
<% when "pending" %>
  <span class="inline-flex items-center gap-1.5 px-3 py-1 text-sm font-medium bg-yellow-100 text-yellow-800 rounded-full">
    <i class="fa-solid fa-clock"></i>
