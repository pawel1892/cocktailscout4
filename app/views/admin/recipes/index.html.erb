<div class="mb-8 flex items-center justify-between">
  <h1 class="text-3xl font-bold text-gray-800">Rezepte verwalten</h1>
  <div class="flex items-center gap-4">
    <div class="text-sm text-gray-600">
      Gesamt: <strong><%= @pagy.count %></strong> Rezepte
    </div>
    <%= link_to "Neues Rezept erstellen", new_admin_recipe_path, class: "btn btn-primary" %>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow border border-gray-200 p-6 mb-6">
  <%= form_with url: admin_recipes_path, method: :get, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Status Filter -->
      <div>
        <%= f.label :status, "Status", class: "label-field" %>
        <%= f.select :status,
          options_for_select([
            ["Alle", ""],
            ["Entwürfe", "draft"],
            ["Veröffentlicht", "published"],
            ["Gelöscht", "deleted"]
          ], params[:status]),
          {},
          class: "input-field" %>
      </div>

      <!-- Search -->
      <div>
        <%= f.label :q, "Titel suchen", class: "label-field" %>
        <%= f.text_field :q,
          value: params[:q],
          placeholder: "Rezepttitel...",
          class: "input-field" %>
      </div>

      <!-- Needs Attention -->
      <div class="flex items-end">
        <label class="flex items-center cursor-pointer">
          <%= f.check_box :needs_attention,
            { class: "rounded border-gray-300 text-cs-gold focus:ring-cs-gold", checked: params[:needs_attention] == "true" },
            "true",
            "" %>
          <span class="ml-2 text-sm text-gray-700">
            ⚠️ Nur Rezepte mit Überprüfungsbedarf
          </span>
        </label>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-2">
      <%= f.submit "Filtern", class: "btn btn-primary" %>
      <% if params[:status].present? || params[:q].present? || params[:needs_attention].present? %>
        <%= link_to "Filter zurücksetzen", admin_recipes_path, class: "btn btn-outline" %>
      <% end %>
    </div>

    <!-- Active Filters Display -->
    <% if params[:status].present? || params[:q].present? || params[:needs_attention].present? %>
      <div class="flex flex-wrap gap-2 pt-2 border-t">
        <span class="text-sm text-gray-600">Aktive Filter:</span>

        <% if params[:status].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Status: <%= {"draft" => "Entwürfe", "published" => "Veröffentlicht", "deleted" => "Gelöscht"}[params[:status]] %>
            <%= link_to "×", admin_recipes_path(status: nil, q: params[:q], needs_attention: params[:needs_attention]), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>

        <% if params[:q].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Suche: "<%= params[:q] %>"
            <%= link_to "×", admin_recipes_path(status: params[:status], q: nil, needs_attention: params[:needs_attention]), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>

        <% if params[:needs_attention].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Überprüfungsbedarf
            <%= link_to "×", admin_recipes_path(status: params[:status], q: params[:q], needs_attention: nil), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Recipes Table -->
<% if @recipes.any? %>
  <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            ID
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_recipes_path(sort: "title", direction: params[:sort] == "title" && params[:direction] == "asc" ? "desc" : "asc", status: params[:status], q: params[:q], needs_attention: params[:needs_attention]), class: "hover:text-gray-700" do %>
              Titel
              <% if params[:sort] == "title" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Autor
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_recipes_path(sort: "visits_count", direction: params[:sort] == "visits_count" && params[:direction] == "asc" ? "desc" : "asc", status: params[:status], q: params[:q], needs_attention: params[:needs_attention]), class: "hover:text-gray-700" do %>
              Besuche
              <% if params[:sort] == "visits_count" || params[:sort].blank? %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_recipes_path(sort: "average_rating", direction: params[:sort] == "average_rating" && params[:direction] == "asc" ? "desc" : "asc", status: params[:status], q: params[:q], needs_attention: params[:needs_attention]), class: "hover:text-gray-700" do %>
              Bewertung
              <% if params[:sort] == "average_rating" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_recipes_path(sort: "alcohol_content", direction: params[:sort] == "alcohol_content" && params[:direction] == "asc" ? "desc" : "asc", status: params[:status], q: params[:q], needs_attention: params[:needs_attention]), class: "hover:text-gray-700" do %>
              Alkohol %
              <% if params[:sort] == "alcohol_content" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_recipes_path(sort: "created_at", direction: params[:sort] == "created_at" && params[:direction] == "asc" ? "desc" : "asc", status: params[:status], q: params[:q], needs_attention: params[:needs_attention]), class: "hover:text-gray-700" do %>
              Erstellt
              <% if params[:sort] == "created_at" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Aktionen
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @recipes.each do |recipe| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 text-sm text-gray-900">
              <%= recipe.id %>
            </td>
            <td class="px-4 py-3">
              <%= link_to recipe.title, recipe_path(recipe.slug), class: "text-blue-600 hover:underline", target: "_blank" %>
              <% unless recipe.has_scalable_ingredients? %>
                <span class="ml-2 text-yellow-600" title="Zutaten benötigen Überprüfung">⚠️</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900">
              <%= recipe.user.username %>
            </td>
            <td class="px-4 py-3">
              <%= status_badge(recipe) %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 text-center">
              <%= recipe.visits_count %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 text-center">
              <%= recipe.average_rating&.round(1) || "-" %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 text-center">
              <%= recipe.alcohol_content&.round(1) || "-" %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-500">
              <%= l(recipe.created_at, format: :short) %>
            </td>
            <td class="px-4 py-3 text-sm">
              <div class="flex gap-2 items-center">
                <%= link_to "Bearbeiten", edit_admin_recipe_path(recipe.id), class: "text-blue-600 hover:underline" %>
                <%= link_to "Ansehen", recipe_path(recipe.slug), target: "_blank", class: "text-blue-600 hover:underline" %>
                <% unless recipe.is_deleted %>
                  <%= button_to "Löschen",
                    admin_recipe_path(recipe.id),
                    method: :delete,
                    data: { turbo_confirm: "Sind Sie sicher, dass Sie dieses Rezept löschen möchten?" },
                    class: "text-red-600 hover:underline" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="mt-6 flex justify-center">
    <%== @pagy.series_nav %>
  </div>
<% else %>
  <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
    <div class="text-gray-400 mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 0 0 6 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 0 1 6 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 0 1 6-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0 0 18 18a8.967 8.967 0 0 0-6 2.292m0-14.25v14.25" />
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900">Keine Rezepte gefunden</h3>
    <p class="text-gray-500">Versuchen Sie andere Filter.</p>
  </div>
<% end %>
