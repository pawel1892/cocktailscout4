<div class="mb-8 flex items-center justify-between">
  <h1 class="text-3xl font-bold text-gray-800">Meldungen</h1>
</div>

<!-- Tabs -->
<div class="flex border-b border-gray-200 mb-6">
  <%= link_to admin_reports_path(filter: 'pending'), class: "py-2 px-4 font-medium transition #{params[:filter] != 'all' ? 'text-cs-dark-red border-b-2 border-cs-dark-red' : 'text-gray-500 hover:text-gray-700'}" do %>
    Offen
    <% if Report.pending.count > 0 %>
      <span class="ml-2 bg-red-100 text-red-800 text-xs font-semibold mr-2 px-2.5 py-0.5 rounded"><%= Report.pending.count %></span>
    <% end %>
  <% end %>
  
  <%= link_to "Erledigt", admin_reports_path(filter: 'all'), class: "py-2 px-4 font-medium transition #{params[:filter] == 'all' ? 'text-cs-dark-red border-b-2 border-cs-dark-red' : 'text-gray-500 hover:text-gray-700'}" %>
</div>

<!-- List -->
<div class="space-y-4">
  <% if @reports.any? %>
    <% @reports.each do |report| %>
      <div class="bg-white rounded-lg shadow border border-gray-200 p-6 transition hover:shadow-md">
        <div class="flex flex-col lg:flex-row justify-between items-start gap-4">
          
          <!-- Left: Meta & Content -->
          <div class="space-y-3 flex-grow min-w-0">
            <!-- Header: Who reported What -->
            <div class="flex items-center gap-2 text-sm text-gray-500">
              <span class="font-semibold text-gray-800"><%= user_badge(report.reporter) %></span>
              hat
              <span class="bg-gray-100 px-2 py-0.5 rounded text-xs uppercase tracking-wide font-bold">
                <%= report.reportable_type %>
              </span>
              gemeldet
              <span class="text-gray-400">&bull;</span>
              <%= time_ago_in_words(report.created_at) %>
            </div>

            <!-- Reason -->
            <div class="bg-red-50 border-l-4 border-red-500 p-3 rounded-r">
              <div class="flex items-baseline gap-2">
                <strong class="text-red-700 capitalize"><%= report.reason %>:</strong>
                <span class="text-gray-700"><%= report.description.presence || "Keine Beschreibung" %></span>
              </div>
            </div>

            <!-- Content Snippet -->
            <div class="mt-2 bg-gray-50 p-4 rounded border border-gray-200 overflow-hidden">
              <% if report.reportable %>
                <% content = report.reportable.try(:content) || report.reportable.try(:body) || report.reportable.try(:message) %>
                <div class="text-gray-600 italic mb-2 line-clamp-3 break-words whitespace-pre-wrap">"<%= content %>"</div>
                
                <% if report.reportable_type == 'PrivateMessage' %>
                  <div class="text-xs text-gray-500 mt-2 border-t pt-2">
                    Privatnachricht von <%= user_badge(report.reportable.sender) %> an <%= user_badge(report.reportable.receiver) %>
                  </div>
                <% else %>
                  <div class="text-sm truncate">
                    <% 
                      link_target = case report.reportable
                        when ForumPost then forum_thread_path(report.reportable.forum_thread, anchor: "post-#{report.reportable.id}")
                        when RecipeComment then recipe_path(report.reportable.recipe, anchor: "comments")
                        else "#"
                      end
                    %>
                    <% if link_target != "#" %>
                      <a href="<%= link_target %>" target="_blank" class="text-cs-dark-red hover:underline flex items-center gap-1 break-all">
                        Inhalt ansehen: <%= link_target %>
                      </a>
                    <% end %>
                  </div>
                <% end %>
              <% else %>
                <span class="text-red-500 italic">Inhalt wurde gelöscht oder existiert nicht mehr.</span>
              <% end %>
            </div>
          </div>

          <!-- Right: Actions -->
          <div class="min-w-[200px] flex flex-col items-end gap-2">
            <!-- Status Badge -->
            <div class="mb-4">
              <% case report.status %>
              <% when 'pending' %>
                <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-bold">Offen</span>
              <% when 'resolved' %>
                <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-bold">Gelöst</span>
              <% when 'dismissed' %>
                <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm font-bold">Abgelehnt</span>
              <% end %>
            </div>

            <% if report.pending? %>
              <%= form_with url: admin_report_path(report), method: :patch, class: "w-full space-y-2" do |f| %>
                <%= f.text_area :resolution_notes, rows: 2, placeholder: "Notiz (optional)...", class: "w-full text-sm border-gray-300 rounded focus:ring-cs-dark-red focus:border-cs-dark-red" %>
                
                <div class="flex gap-2 justify-end">
                  <button type="submit" name="status" value="dismissed" class="px-3 py-1 text-sm border border-gray-300 rounded hover:bg-gray-50 text-gray-700 transition">
                    Ablehnen
                  </button>
                  <button type="submit" name="status" value="resolved" class="px-3 py-1 text-sm bg-green-600 text-white rounded hover:bg-green-700 transition shadow-sm">
                    Lösen
                  </button>
                </div>
              <% end %>
            <% else %>
              <div class="text-xs text-gray-500 text-right">
                Bearbeitet von <strong><%= report.resolved_by&.username %></strong><br>
                <%= time_ago_in_words(report.updated_at) %>
                <% if report.resolution_notes.present? %>
                  <div class="mt-1 bg-gray-50 p-2 rounded border border-gray-100 italic">
                    "<%= report.resolution_notes %>"
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>

        </div>
      </div>
    <% end %>
    
    <div class="mt-6 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% else %>
    <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
      <div class="text-gray-400 mb-2">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
        </svg>
      </div>
      <h3 class="text-lg font-medium text-gray-900">Alles sauber!</h3>
      <p class="text-gray-500">Keine Meldungen gefunden.</p>
    </div>
  <% end %>
</div>
