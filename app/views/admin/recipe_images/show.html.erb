<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to admin_recipe_images_path, class: "link flex items-center gap-1 text-sm mb-4" do %>
      <i class="fas fa-chevron-left"></i>
      Zurück zur Übersicht
    <% end %>

    <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Bild von <%= @recipe_image.user.username %></h1>
        <div class="flex items-center gap-3 text-sm text-gray-600">
          <span>Rezept: <strong><%= @recipe_image.recipe.title %></strong></span>
          <span>•</span>
          <span>Hochgeladen <%= l(@recipe_image.created_at, format: :short) %></span>
        </div>
      </div>
      <%= render "shared/recipe_image_state_badge", recipe_image: @recipe_image %>
    </div>
  </div>

  <!-- Image Preview -->
  <div class="card p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Bild</h2>
    <% if @recipe_image.image.attached? %>
      <%= image_tag @recipe_image.image.variant(:large), class: "max-w-full rounded-lg shadow", alt: "Bild" %>
    <% else %>
      <div class="bg-gray-100 rounded-lg p-12 text-center text-gray-500">
        <i class="fa-solid fa-image text-4xl mb-2"></i>
        <p>Kein Bild verfügbar</p>
      </div>
    <% end %>
  </div>

  <!-- Actions for Pending Images -->
  <% if @recipe_image.pending? %>
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-6 mb-6">
      <h3 class="font-semibold text-blue-900 mb-4 flex items-center gap-2">
        <i class="fa-solid fa-gavel"></i>
        Bild prüfen
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <!-- Approve -->
        <div class="bg-white rounded-lg border border-green-200 p-4">
          <h4 class="font-semibold text-green-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-check-circle"></i>
            Genehmigen
          </h4>
          <p class="text-sm text-gray-700 mb-4">
            Das Bild wird in der Cocktailgalerie veröffentlicht.
          </p>
          <%= button_to "Bild genehmigen",
            approve_admin_recipe_image_path(@recipe_image),
            method: :post,
            class: "btn btn-primary w-full",
            data: { confirm: "Dieses Bild genehmigen und veröffentlichen?" } %>
        </div>

        <!-- Reject -->
        <div class="bg-white rounded-lg border border-red-200 p-4">
          <h4 class="font-semibold text-red-900 mb-2 flex items-center gap-2">
            <i class="fa-solid fa-times-circle"></i>
            Ablehnen
          </h4>
          <%= form_with url: reject_admin_recipe_image_path(@recipe_image), method: :post, class: "space-y-3" do |f| %>
            <%= f.label :moderation_reason, "Ablehnungsgrund (optional):", class: "label-field text-sm" %>
            <%= f.text_area :moderation_reason,
              rows: 3,
              placeholder: "Begründe kurz, warum dieses Bild abgelehnt wird...",
              class: "input-field text-sm" %>
            <%= f.submit "Bild ablehnen",
              class: "btn btn-outline-danger w-full",
              data: { confirm: "Dieses Bild ablehnen?" } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Moderation Information (for moderated images) -->
  <% if @recipe_image.moderated_at %>
    <div class="card p-6 mb-6">
      <h2 class="text-lg font-semibold text-gray-900 mb-4">Moderationsinformationen</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
        <div>
          <span class="text-gray-600">Moderiert am:</span>
          <span class="font-medium"><%= l(@recipe_image.moderated_at, format: :long) %></span>
        </div>
        <div>
          <span class="text-gray-600">Moderiert von:</span>
          <span class="font-medium"><%= @recipe_image.moderated_by.username %></span>
        </div>
      </div>

      <% if @recipe_image.rejected? && @recipe_image.moderation_reason.present? %>
        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mt-4">
          <p class="font-semibold text-red-900 mb-1">Ablehnungsgrund:</p>
          <p class="text-red-800"><%= simple_format(@recipe_image.moderation_reason) %></p>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Recipe Info -->
  <div class="card p-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">Rezeptinformationen</h2>
    <div class="text-sm space-y-2">
      <div>
        <span class="text-gray-600">Rezept:</span>
        <span class="font-medium"><%= @recipe_image.recipe.title %></span>
      </div>
      <div>
        <span class="text-gray-600">Hochgeladen von:</span>
        <span class="font-medium"><%= @recipe_image.user.username %></span>
      </div>
    </div>
  </div>
</div>
