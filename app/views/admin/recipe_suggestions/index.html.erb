<div class="mb-8 flex items-center justify-between">
  <h1 class="text-3xl font-bold text-gray-800">Rezeptvorschläge</h1>
  <div class="text-sm text-gray-600">
    Gesamt: <strong><%= @pagy.count %></strong> Vorschläge
  </div>
</div>

<!-- Status Tabs -->
<div class="bg-white rounded-lg shadow border border-gray-200 mb-6">
  <div class="border-b border-gray-200">
    <nav class="flex -mb-px">
      <%= link_to admin_recipe_suggestions_path,
        class: "flex items-center gap-2 px-6 py-4 text-sm font-medium border-b-2 #{params[:status].blank? ? 'border-cs-dark-red text-cs-dark-red' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        Alle
        <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold bg-gray-200 text-gray-700 rounded-full">
          <%= RecipeSuggestion.count %>
        </span>
      <% end %>

      <%= link_to admin_recipe_suggestions_path(status: "pending"),
        class: "flex items-center gap-2 px-6 py-4 text-sm font-medium border-b-2 #{params[:status] == 'pending' ? 'border-cs-dark-red text-cs-dark-red' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        <i class="fa-solid fa-clock"></i>
        Wartend
        <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold bg-yellow-200 text-yellow-800 rounded-full">
          <%= RecipeSuggestion.status_pending.count %>
        </span>
      <% end %>

      <%= link_to admin_recipe_suggestions_path(status: "approved"),
        class: "flex items-center gap-2 px-6 py-4 text-sm font-medium border-b-2 #{params[:status] == 'approved' ? 'border-cs-dark-red text-cs-dark-red' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        <i class="fa-solid fa-check-circle"></i>
        Genehmigt
        <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold bg-green-200 text-green-800 rounded-full">
          <%= RecipeSuggestion.status_approved.count %>
        </span>
      <% end %>

      <%= link_to admin_recipe_suggestions_path(status: "rejected"),
        class: "flex items-center gap-2 px-6 py-4 text-sm font-medium border-b-2 #{params[:status] == 'rejected' ? 'border-cs-dark-red text-cs-dark-red' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
        <i class="fa-solid fa-times-circle"></i>
        Abgelehnt
        <span class="inline-flex items-center justify-center px-2 py-0.5 text-xs font-bold bg-red-200 text-red-800 rounded-full">
          <%= RecipeSuggestion.status_rejected.count %>
        </span>
      <% end %>
    </nav>
  </div>
</div>

<!-- Suggestions List -->
<% if @suggestions.any? %>
  <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Titel
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Autor
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Eingereicht
          </th>
          <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Aktionen
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @suggestions.each do |suggestion| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
              <%= link_to suggestion.title, admin_recipe_suggestion_path(suggestion), class: "text-sm font-medium text-cs-dark-red link" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= suggestion.user.username %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= render "shared/suggestion_status_badge", suggestion: suggestion %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm text-gray-900"><%= l(suggestion.created_at, format: :short) %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to "Details", admin_recipe_suggestion_path(suggestion), class: "text-cs-dark-red hover:text-cs-dark-red/80" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @pagy.pages > 1 %>
    <div class="mt-6">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
<% else %>
  <!-- Empty State -->
  <div class="bg-white rounded-lg shadow border border-gray-200 p-12 text-center">
    <i class="fa-solid fa-lightbulb text-6xl text-gray-300 mb-4"></i>
    <h3 class="text-xl font-semibold text-gray-700 mb-2">
      <% case params[:status] %>
      <% when "pending" %>
        Keine wartenden Vorschläge
      <% when "approved" %>
        Keine genehmigten Vorschläge
      <% when "rejected" %>
        Keine abgelehnten Vorschläge
      <% else %>
        Keine Vorschläge vorhanden
      <% end %>
    </h3>
    <p class="text-gray-600">
      <% if params[:status] == "pending" %>
        Neue Vorschläge erscheinen hier, sobald Benutzer sie einreichen.
      <% else %>
        Es gibt aktuell keine Vorschläge in dieser Kategorie.
      <% end %>
    </p>
  </div>
<% end %>
