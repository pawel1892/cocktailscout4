<div class="mb-8 flex items-center justify-between">
  <h1 class="text-3xl font-bold text-gray-800">Einheiten verwalten</h1>
  <div class="flex items-center gap-4">
    <div class="text-sm text-gray-600">
      Gesamt: <strong><%= @pagy.count %></strong> Einheiten
    </div>
    <%= link_to "Neue Einheit erstellen", new_admin_unit_path, class: "btn btn-primary" %>
  </div>
</div>

<!-- Filters -->
<div class="bg-white rounded-lg shadow border border-gray-200 p-6 mb-6">
  <%= form_with url: admin_units_path, method: :get, class: "space-y-4" do |f| %>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <!-- Usage Filter -->
      <div>
        <%= f.label :usage, "Verwendung", class: "label-field" %>
        <%= f.select :usage,
          options_for_select([
            ["Alle", ""],
            ["In Verwendung", "used"],
            ["Nicht verwendet", "unused"]
          ], params[:usage]),
          {},
          class: "input-field" %>
      </div>

      <!-- Category Filter -->
      <div>
        <%= f.label :category, "Kategorie", class: "label-field" %>
        <%= f.select :category,
          options_for_select([
            ["Alle", ""],
            ["Volumen", "volume"],
            ["Zählbar", "count"],
            ["Speziell", "special"]
          ], params[:category]),
          {},
          class: "input-field" %>
      </div>

      <!-- Search -->
      <div>
        <%= f.label :q, "Name suchen", class: "label-field" %>
        <%= f.text_field :q,
          value: params[:q],
          placeholder: "Einheitname...",
          class: "input-field" %>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex gap-2">
      <%= f.submit "Filtern", class: "btn btn-primary" %>
      <% if params[:usage].present? || params[:category].present? || params[:q].present? %>
        <%= link_to "Filter zurücksetzen", admin_units_path, class: "btn btn-outline" %>
      <% end %>
    </div>

    <!-- Active Filters Display -->
    <% if params[:usage].present? || params[:category].present? || params[:q].present? %>
      <div class="flex flex-wrap gap-2 pt-2 border-t">
        <span class="text-sm text-gray-600">Aktive Filter:</span>

        <% if params[:usage].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Verwendung: <%= {"used" => "In Verwendung", "unused" => "Nicht verwendet"}[params[:usage]] %>
            <%= link_to "×", admin_units_path(usage: nil, category: params[:category], q: params[:q]), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>

        <% if params[:category].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Kategorie: <%= {"volume" => "Volumen", "count" => "Zählbar", "special" => "Speziell"}[params[:category]] %>
            <%= link_to "×", admin_units_path(usage: params[:usage], category: nil, q: params[:q]), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>

        <% if params[:q].present? %>
          <span class="inline-flex items-center px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm">
            Suche: "<%= params[:q] %>"
            <%= link_to "×", admin_units_path(usage: params[:usage], category: params[:category], q: nil), class: "ml-1 font-bold hover:text-blue-900" %>
          </span>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<!-- Units Table -->
<% if @units.any? %>
  <div class="bg-white rounded-lg shadow border border-gray-200 overflow-hidden">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            ID
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_units_path(sort: "name", direction: params[:sort] == "name" && params[:direction] == "asc" ? "desc" : "asc", usage: params[:usage], category: params[:category], q: params[:q]), class: "hover:text-gray-700" do %>
              Name
              <% if params[:sort] == "name" || params[:sort].blank? %>
                <%= params[:direction] == "asc" || params[:direction].blank? ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_units_path(sort: "display_name", direction: params[:sort] == "display_name" && params[:direction] == "asc" ? "desc" : "asc", usage: params[:usage], category: params[:category], q: params[:q]), class: "hover:text-gray-700" do %>
              Anzeigename
              <% if params[:sort] == "display_name" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Plural
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_units_path(sort: "category", direction: params[:sort] == "category" && params[:direction] == "asc" ? "desc" : "asc", usage: params[:usage], category: params[:category], q: params[:q]), class: "hover:text-gray-700" do %>
              Kategorie
              <% if params[:sort] == "category" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            ml-Verhältnis
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            Teilbar
          </th>
          <th scope="col" class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_units_path(sort: "usage_count", direction: params[:sort] == "usage_count" && params[:direction] == "asc" ? "desc" : "asc", usage: params[:usage], category: params[:category], q: params[:q]), class: "hover:text-gray-700" do %>
              Verwendungen
              <% if params[:sort] == "usage_count" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            <%= link_to admin_units_path(sort: "created_at", direction: params[:sort] == "created_at" && params[:direction] == "asc" ? "desc" : "asc", usage: params[:usage], category: params[:category], q: params[:q]), class: "hover:text-gray-700" do %>
              Erstellt
              <% if params[:sort] == "created_at" %>
                <%= params[:direction] == "asc" ? "↑" : "↓" %>
              <% end %>
            <% end %>
          </th>
          <th scope="col" class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Aktionen
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @units.each do |unit| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 text-sm text-gray-900">
              <%= unit.id %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 font-medium">
              <%= unit.name %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900">
              <%= unit.display_name %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-500">
              <%= unit.plural_name %>
            </td>
            <td class="px-4 py-3 text-sm text-center">
              <% case unit.category %>
              <% when "volume" %>
                <span class="px-2 py-1 text-xs font-semibold rounded bg-blue-100 text-blue-800">
                  Volumen
                </span>
              <% when "count" %>
                <span class="px-2 py-1 text-xs font-semibold rounded bg-green-100 text-green-800">
                  Zählbar
                </span>
              <% when "special" %>
                <span class="px-2 py-1 text-xs font-semibold rounded bg-purple-100 text-purple-800">
                  Speziell
                </span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-900 text-center">
              <% if unit.ml_ratio.present? %>
                <%= unit.ml_ratio.round(2) %> ml
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-center">
              <% if unit.divisible %>
                <span class="text-green-600 font-bold" title="Teilbar">✓</span>
              <% else %>
                <span class="text-gray-400" title="Nicht teilbar">✗</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-center">
              <% count = unit.usage_count.to_i %>
              <% if count > 0 %>
                <span class="px-2 py-1 text-xs font-semibold rounded <%= count > 100 ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                  <%= count %>
                </span>
              <% else %>
                <span class="px-2 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-600">
                  0
                </span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-sm text-gray-500">
              <%= l(unit.created_at, format: :short) %>
            </td>
            <td class="px-4 py-3 text-sm">
              <div class="flex gap-2 items-center">
                <%= link_to "Bearbeiten", edit_admin_unit_path(unit), class: "text-blue-600 hover:underline" %>
                <% if unit.usage_count.to_i == 0 %>
                  <%= button_to "Löschen",
                    admin_unit_path(unit),
                    method: :delete,
                    data: { turbo_confirm: "Sind Sie sicher, dass Sie diese Einheit löschen möchten?" },
                    class: "text-red-600 hover:underline" %>
                <% else %>
                  <span class="text-gray-400 cursor-not-allowed" title="Wird in <%= unit.usage_count.to_i %> Rezeptzutat(en) verwendet">Löschen</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <div class="mt-6 flex justify-center">
    <%== @pagy.series_nav %>
  </div>
<% else %>
  <div class="text-center py-12 bg-white rounded-lg border border-gray-200">
    <div class="text-gray-400 mb-2">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-12 h-12 mx-auto">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900">Keine Einheiten gefunden</h3>
    <p class="text-gray-500">Versuchen Sie andere Filter oder erstellen Sie eine neue Einheit.</p>
  </div>
<% end %>
