<div class="space-y-12">
  <section>
    <h1 class="text-3xl font-bold mb-6">Kitchen Sink - Design System</h1>
    <p class="text-gray-600">Standard-Komponenten für CocktailScout</p>
  </section>

  <!-- Links -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold border-b pb-2">Links</h2>
    <div class="flex flex-wrap gap-8 items-start">
      <a href="#" class="link">Standard Link</a>
      <a href="#" class="link-underline">Link with Underline</a>
    </div>
    <div class="mt-4">
      <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;a href="#" class="link"&gt;Standard Link&lt;/a&gt;
&lt;a href="#" class="link-underline"&gt;Link with Underline&lt;/a&gt;</code></pre>
    </div>
  </section>

  <!-- Buttons -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold border-b pb-2">Buttons</h2>
    <div class="flex flex-wrap gap-4 items-center">
      <button class="btn btn-primary">Primary Button</button>
      <button class="btn btn-gold">Gold Button</button>
      <button class="btn btn-outline">Outline Button</button>
      <button class="btn btn-primary btn-sm">Small Button</button>
    </div>
    <div class="mt-4">
      <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;button class="btn btn-primary"&gt;Primary Button&lt;/button&gt;
&lt;button class="btn btn-gold"&gt;Gold Button&lt;/button&gt;
&lt;button class="btn btn-outline"&gt;Outline Button&lt;/button&gt;
&lt;button class="btn btn-primary btn-sm"&gt;Small Button&lt;/button&gt;</code></pre>
    </div>
  </section>

  <!-- Form Fields -->
  <section class="space-y-6 max-w-2xl">
    <h2 class="text-xl font-semibold border-b pb-2">Formulare</h2>
    
    <div>
      <label class="label-field">Standard Label</label>
      <input type="text" class="input-field" placeholder="Eingabefeld...">
    </div>

    <div>
      <label class="label-field">Email Adresse</label>
      <input type="email" class="input-field" placeholder="name@example.com">
      <p class="mt-1 text-sm text-gray-500">Ein kleiner Hilfetext.</p>
    </div>

    <div>
      <label class="label-field">Select Box</label>
      <select class="input-field">
        <option>Option 1</option>
        <option>Option 2</option>
      </select>
    </div>

    <div class="mt-4">
       <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;!-- Text Input --&gt;
&lt;div&gt;
  &lt;label class="label-field"&gt;Standard Label&lt;/label&gt;
  &lt;input type="text" class="input-field" placeholder="..."&gt;
&lt;/div&gt;

&lt;!-- With Helper Text --&gt;
&lt;div&gt;
  &lt;label class="label-field"&gt;Email Adresse&lt;/label&gt;
  &lt;input type="email" class="input-field" placeholder="..."&gt;
  &lt;p class="mt-1 text-sm text-gray-500"&gt;Ein kleiner Hilfetext.&lt;/p&gt;
&lt;/div&gt;

&lt;!-- Select --&gt;
&lt;select class="input-field"&gt;
  &lt;option&gt;Option 1&lt;/option&gt;
&lt;/select&gt;</code></pre>
    </div>
  </section>

  <!-- Form Validation -->
  <section class="space-y-6 max-w-2xl">
    <h2 class="text-xl font-semibold border-b pb-2">Formular Validierung</h2>
    
    <!-- Standard Group -->
    <div class="form-group">
      <label class="label-field">Benutzername</label>
      <input type="text" class="input-field" placeholder="Gültige Eingabe">
      <p class="form-hint">Darf nur Buchstaben und Zahlen enthalten.</p>
    </div>

    <!-- Error State -->
    <div class="form-group">
      <label class="label-field label-error">Passwort</label>
      <input type="password" class="input-field input-error" value="123">
      <p class="form-error-message">Das Passwort ist zu kurz (mind. 8 Zeichen).</p>
    </div>

    <div class="mt-4">
       <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;!-- Standard Group with Hint --&gt;
&lt;div class="form-group"&gt;
  &lt;label class="label-field"&gt;Benutzername&lt;/label&gt;
  &lt;input type="text" class="input-field"&gt;
  &lt;p class="form-hint"&gt;Hilfetext...&lt;/p&gt;
&lt;/div&gt;

&lt;!-- Error State --&gt;
&lt;div class="form-group"&gt;
  &lt;label class="label-field label-error"&gt;Passwort&lt;/label&gt;
  &lt;input type="password" class="input-field input-error"&gt;
  &lt;p class="form-error-message"&gt;Fehlermeldung...&lt;/p&gt;
&lt;/div&gt;</code></pre>
    </div>
  </section>

  <!-- Boxes & Cards -->
  <section class="space-y-6">
    <h2 class="text-xl font-semibold border-b pb-2">Boxen & Karten</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 items-start">
      <!-- Standard Card -->
      <div class="card">
        <div class="card-header">Standard Card</div>
        <div class="card-body">
          <p>This is a standard card with header, body, and footer. Great for grouping related content like a single cocktail recipe or user profile.</p>
        </div>
        <div class="card-footer">Last updated 3 mins ago</div>
      </div>

      <!-- Callouts -->
      <div class="space-y-4">
        <div class="callout">
          <strong>Neutral Callout</strong>
          <p class="text-sm mt-1">Useful for general notes or side information.</p>
        </div>
        <div class="callout-gold">
          <strong>Gold Feature</strong>
          <p class="text-sm mt-1">Highlighting a premium feature or "Pro Tip".</p>
        </div>
        <div class="callout-red">
          <strong>Important Note</strong>
          <p class="text-sm mt-1">Critical information that shouldn't be ignored.</p>
        </div>
      </div>
    </div>

    <div class="mt-4">
      <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;!-- Card Component --&gt;
&lt;div class="card"&gt;
  &lt;div class="card-header"&gt;Header&lt;/div&gt;
  &lt;div class="card-body"&gt;Content...&lt;/div&gt;
  &lt;div class="card-footer"&gt;Footer...&lt;/div&gt;
&lt;/div&gt;

&lt;!-- Callouts --&gt;
&lt;div class="callout"&gt;...&lt;/div&gt;
&lt;div class="callout-gold"&gt;...&lt;/div&gt;
&lt;div class="callout-red"&gt;...&lt;/div&gt;</code></pre>
    </div>
  </section>

  <!-- Tags -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold border-b pb-2">Tags / Labels</h2>
    <div class="flex flex-wrap gap-2">
      <span class="tag tag-neutral">Neutral</span>
      <span class="tag tag-primary">Primary</span>
      <span class="tag tag-gold">Gold</span>
      <span class="tag tag-success">Success</span>
      <span class="tag tag-warning">Warning</span>
      <span class="tag tag-error">Error</span>
    </div>
    <div class="mt-4">
      <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;span class="tag tag-neutral"&gt;Neutral&lt;/span&gt;
&lt;span class="tag tag-primary"&gt;Primary&lt;/span&gt;
&lt;span class="tag tag-gold"&gt;Gold&lt;/span&gt;
&lt;span class="tag tag-success"&gt;Success&lt;/span&gt;
&lt;span class="tag tag-warning"&gt;Warning&lt;/span&gt;
&lt;span class="tag tag-error"&gt;Error&lt;/span&gt;</code></pre>
    </div>
  </section>

  <!-- Tables -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold border-b pb-2">Tabellen</h2>
    <div class="table-container">
      <table class="table-standard">
        <thead>
          <tr>
            <th class="table-th">Name</th>
            <th class="table-th">Status</th>
            <th class="table-th">Rolle</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-200">
          <tr class="table-tr-hover">
            <td class="table-td">Max Mustermann</td>
            <td class="table-td"><span class="tag tag-success">Aktiv</span></td>
            <td class="table-td">Admin</td>
          </tr>
          <tr class="table-tr-hover">
            <td class="table-td">Erika Musterfrau</td>
            <td class="table-td"><span class="tag tag-neutral">Inaktiv</span></td>
            <td class="table-td">User</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="mt-4">
      <pre class="text-sm bg-gray-100 text-gray-800 p-4 rounded border border-gray-200 overflow-x-auto"><code>&lt;div class="table-container"&gt;
  &lt;table class="table-standard"&gt;
    &lt;thead&gt;
      &lt;tr&gt;
        &lt;th class="table-th"&gt;Name&lt;/th&gt;
        ...
      &lt;/tr&gt;
    &lt;/thead&gt;
    &lt;tbody class="divide-y divide-gray-200"&gt;
      &lt;tr class="table-tr-hover"&gt;
        &lt;td class="table-td"&gt;...&lt;/td&gt;
      &lt;/tr&gt;
    &lt;/tbody&gt;
  &lt;/table&gt;
&lt;/div&gt;</code></pre>
    </div>
  </section>

  <!-- Colors -->
  <section class="space-y-4">
    <h2 class="text-xl font-semibold border-b pb-2">Farben</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <div class="p-4 rounded bg-cs-dark-red text-white">
        <strong class="block mb-1 text-lg">Dark Red</strong>
        <div class="mb-1">
          <code class="text-xs bg-black/20 p-1 rounded">bg-cs-dark-red</code>
        </div>
        <div class="text-sm font-mono opacity-80">#360D0C</div>
      </div>
      <div class="p-4 rounded bg-cs-gold text-cs-dark-red">
        <strong class="block mb-1 text-lg">Gold</strong>
        <div class="mb-1">
          <code class="text-xs bg-white/30 p-1 rounded">bg-cs-gold</code>
        </div>
        <div class="text-sm font-mono opacity-80">#CBB859</div>
      </div>
      <div class="p-4 rounded bg-black text-cs-gold border border-gray-700">
        <strong class="block mb-1 text-lg">Black</strong>
        <div class="mb-1">
          <code class="text-xs bg-white/20 p-1 rounded text-white">bg-black</code>
        </div>
        <div class="text-sm font-mono opacity-80 text-white">#000000</div>
      </div>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4">
      <div class="p-4 rounded bg-cs-success text-white">
        <strong class="block mb-1 text-lg">Success</strong>
        <div class="mb-1">
          <code class="text-xs bg-black/20 p-1 rounded">bg-cs-success</code>
        </div>
        <div class="text-sm font-mono opacity-80">#16A34A</div>
      </div>
      <div class="p-4 rounded bg-cs-warning text-white">
        <strong class="block mb-1 text-lg">Warning</strong>
        <div class="mb-1">
          <code class="text-xs bg-black/20 p-1 rounded">bg-cs-warning</code>
        </div>
        <div class="text-sm font-mono opacity-80">#CA8A04</div>
      </div>
      <div class="p-4 rounded bg-cs-error text-white">
        <strong class="block mb-1 text-lg">Error</strong>
        <div class="mb-1">
          <code class="text-xs bg-black/20 p-1 rounded">bg-cs-error</code>
        </div>
        <div class="text-sm font-mono opacity-80">#DC2626</div>
      </div>
    </div>
  </section>
</div>