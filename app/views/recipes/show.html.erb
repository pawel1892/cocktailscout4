<% content_for :head do %>
  <%= pagy_seo_tags(@comments_pagy) if @comments_pagy.pages > 1 %>
  <%= recipe_structured_data(@recipe) %>
<% end %>

<!-- Title -->
<div class="mb-6 flex items-start justify-between gap-4">
  <div class="min-w-0 flex-1">
    <h1 class="text-3xl md:text-4xl font-bold mb-2 break-words"><%= @recipe.title %></h1>
    <!-- Tags -->
    <%= render "recipes/tag_list", tags: @recipe.tags %>
  </div>

  <div class="flex-shrink-0 pt-1">
    <favorite-toggle
      favoritable-type="Recipe"
      :favoritable-id="<%= @recipe.id %>"
      :initial-favorited="<%= (Current.user && Current.user.favorites.exists?(favoritable: @recipe)) ? 'true' : 'false' %>"
    ></favorite-toggle>
  </div>
</div>

<!-- Stats Bar -->
<div class="card mb-6">
  <div class="card-body p-4">
    <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 items-start sm:justify-between">
      <!-- Left: Rating Control -->
      <div class="flex-1 w-full sm:w-auto min-w-0">
        <rating-control
          rateable-type="Recipe"
          :rateable-id="<%= @recipe.id %>"
          :initial-average="<%= @recipe.average_rating || 0 %>"
          :initial-count="<%= @recipe.ratings_count || 0 %>"
          :user-rating="<%= (Current.user && @recipe.ratings.find_by(user: Current.user)&.score) || 'null' %>"
        ></rating-control>
      </div>

      <!-- Right: All Stats -->
      <div class="text-left sm:text-right text-sm space-y-2 w-full sm:w-auto">
        <!-- Author -->
        <div class="flex items-center sm:justify-end gap-1 text-gray-600">
          <span>von</span>
          <%= user_badge(@recipe.user) %>
        </div>

        <!-- Views -->
        <div class="text-xs text-gray-400 flex items-center sm:justify-end gap-3">
          <span><i class="far fa-eye"></i> <%= number_with_delimiter(@recipe.visits_count) %></span>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Image & Ingredients Section -->
<div class="mb-6 grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- Image (1 column on md+, above on sm) -->
  <% if @recipe.approved_recipe_images.any? %>
    <div class="md:col-span-1 md:order-2">
      <recipe-image-gallery></recipe-image-gallery>
    </div>
  <% end %>

  <!-- Ingredients (2 columns on md+ when image present, full width otherwise) -->
  <div class="<%= @recipe.approved_recipe_images.any? ? 'md:col-span-2 md:order-1' : 'md:col-span-3' %>">
    <recipe-scaling
      recipe-slug="<%= @recipe.slug %>"
      :initial-ingredients='<%= raw @recipe.recipe_ingredients.map { |ri|
        {
          id: ri.id,
          amount: ri.amount,
          unit_name: ri.unit&.name,
          unit_display_name: ri.unit&.display_name,
          ingredient_name: ri.formatted_ingredient_name,
          ingredient_plural_name: ri.ingredient.plural_name,
          formatted_amount: ri.formatted_amount,
          additional_info: ri.additional_info,
          is_garnish: ri.is_garnish,
          needs_review: ri.needs_review,
          old_description: ri.old_description
        }
      }.to_json %>'
      :initial-alcohol-info='<%= raw({
        total_volume_ml: @recipe.total_volume_in_ml.round(1),
        alcohol_volume_ml: @recipe.alcohol_volume_in_ml.round(1),
        alcohol_content_percent: @recipe.calculate_alcohol_content
      }.to_json) %>'
    ></recipe-scaling>
  </div>
</div>

<% if @recipe.approved_recipe_images.any? %>
  <% content_for :head do %>
    <script>
      window.recipeImages = <%= raw @recipe.approved_recipe_images.shuffle.map { |image|
        {
          id: image.id,
          mediumUrl: url_for(recipe_image_url(image, style: :medium)),
          largeUrl: url_for(recipe_image_url(image, style: :large)),
          userBadge: user_badge(image.user),
          uploadDate: l(image.created_at.to_date)
        }
      }.to_json %>;
    </script>
  <% end %>
<% end %>

<!-- Preparation / Description -->
<% if @recipe.description.present? %>
  <div class="card mb-6">
    <div class="card-body p-4 sm:p-6">
      <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
        <i class="fas fa-cocktail text-cs-gold"></i>
        Zubereitung
      </h2>
      <div class="prose prose-sm sm:prose max-w-none text-gray-700">
        <%= simple_format(@recipe.description) %>
      </div>
    </div>
  </div>
<% end %>

<!-- Comments -->
<div class="card">
  <div class="card-body p-4 sm:p-6">
    <h2 class="text-2xl font-bold mb-4 flex items-center gap-2">
      <i class="fas fa-comments text-cs-gold"></i>
      Kommentare
      <span class="text-base font-normal text-gray-500">(<%= @recipe.recipe_comments.count %>)</span>
    </h2>

    <% if @recipe.recipe_comments.any? %>
      <!-- Pagination Top -->
      <% if @comments_pagy.pages > 1 %>
        <div class="mb-4 flex justify-center">
          <%== @comments_pagy.series_nav %>
        </div>
      <% end %>

      <div class="space-y-3 mb-6">
        <% @comments.each do |comment| %>
          <div id="comment-<%= comment.id %>" class="bg-gray-50 rounded-lg p-3 sm:p-4 border border-gray-200 relative group">
            <div class="flex justify-between items-start mb-2">
              <div class="flex items-center gap-2">
                <%= user_badge(comment.user) %>
                <span class="text-xs text-gray-500">
                  <%= l comment.created_at.to_date %>
                </span>
              </div>
              <div class="opacity-0 group-hover:opacity-100 transition-opacity absolute top-2 right-2 flex items-center gap-2">
                <% if can_edit_comment?(comment) %>
                  <%= link_to edit_recipe_comment_path(comment), class: "text-gray-400 hover:text-cs-gold transition-colors", title: "Bearbeiten" do %>
                    <i class="fas fa-pencil-alt text-xs"></i>
                  <% end %>
                <% end %>
                <% if can_delete_comment?(comment) %>
                  <%= button_to recipe_comment_path(comment), method: :delete, onclick: "return confirm('Kommentar wirklich löschen?')", class: "text-gray-400 hover:text-cs-error transition-colors cursor-pointer", title: "Löschen" do %>
                    <i class="fas fa-trash text-xs"></i>
                  <% end %>
                <% end %>
                <%= report_button(comment) %>
              </div>
            </div>
            <div class="text-gray-700 text-sm">
              <%= simple_format(comment.body) %>
            </div>
            <% if comment.last_editor_id.present? %>
              <div class="text-xs text-gray-400 mt-2 text-right">
                Zuletzt bearbeitet von <%= comment.last_editor&.username || "Unbekannt" %> am <%= l comment.updated_at.to_date %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Pagination Bottom -->
      <% if @comments_pagy.pages > 1 %>
        <div class="mb-6 flex justify-center">
          <%== @comments_pagy.series_nav %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-sm mb-6">Noch keine Kommentare. Sei der Erste!</p>
    <% end %>

    <!-- Comment Form -->
    <div id="comment-form" class="border-t pt-6">
      <% if Current.user %>
        <h3 class="text-lg font-semibold mb-3">Kommentar schreiben</h3>
        <%= form_with model: @comment || RecipeComment.new, url: comment_recipe_path(@recipe), local: true, class: "space-y-3" do |form| %>
          <div class="form-group">
            <%= form.label :body, "Dein Kommentar", class: "label-field #{'label-error' if @comment&.errors&.any?}" %>
            <comment-form
              textarea-id="recipe_comment_body"
              textarea-name="recipe_comment[body]"
              :max-length="3000"
              :has-error="<%= @comment&.errors&.any? ? 'true' : 'false' %>"
              model-value="<%= @comment&.body || '' %>"
            ></comment-form>
            <% if @comment&.errors&.include?(:body) %>
              <p class="form-error-message"><%= @comment.errors.full_messages_for(:body).join(', ') %></p>
            <% end %>
          </div>
          <%= form.submit "Kommentar abschicken", class: "btn btn-primary" %>
        <% end %>
      <% else %>
        <div class="bg-gray-50 rounded-lg p-4 border border-gray-200 text-center">
          <p class="text-gray-600 mb-2">Du musst angemeldet sein, um einen Kommentar zu schreiben.</p>
          <%= link_to "Jetzt anmelden", new_session_path, class: "text-cs-dark-red hover:underline font-medium" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
