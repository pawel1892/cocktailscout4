<% content_for :title, "Vorschlag bearbeiten - CocktailScout" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <%= link_to recipe_suggestions_path, class: "link flex items-center gap-1 text-sm mb-4" do %>
      <i class="fas fa-chevron-left"></i>
      Zurück zur Übersicht
    <% end %>

    <h1 class="text-2xl font-bold text-gray-800">Vorschlag bearbeiten</h1>
    <p class="text-gray-600 mt-2">Nach dem Speichern wird dein Vorschlag erneut zur Prüfung eingereicht.</p>
  </div>

  <% if @suggestion.status_rejected? && @suggestion.feedback.present? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <p class="font-semibold text-red-900 mb-1 flex items-center gap-2">
        <i class="fa-solid fa-exclamation-triangle"></i>
        Ablehnungsgrund:
      </p>
      <p class="text-red-800"><%= simple_format(@suggestion.feedback) %></p>
    </div>
  <% end %>

  <% if @errors.present? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <ul class="list-disc list-inside text-red-700">
        <% @errors.each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card p-6">
    <%= form_with url: recipe_suggestion_path(@suggestion), method: :patch, local: true, class: "space-y-6" do |form| %>
      <recipe-form
        :initial-data='<%= raw @recipe_suggestion_form_data.to_json %>'
        :units='<%= raw Unit.order(:category, :name).map { |u| { id: u.id, name: u.name, display_name: u.display_name, plural_name: u.plural_name, category: u.category, divisible: u.divisible } }.to_json %>'
        form-name="recipe_suggestion"
      ></recipe-form>
    <% end %>
  </div>
</div>
