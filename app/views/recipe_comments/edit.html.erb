<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-6">
    <%= link_to recipe_path(@comment.recipe), class: "link flex items-center gap-1 text-sm mb-4" do %>
      <i class="fas fa-chevron-left"></i> Zur√ºck zum Rezept
    <% end %>
    
    <h1 class="text-2xl font-bold text-gray-800">Kommentar bearbeiten</h1>
    <p class="text-gray-500">zu "<%= @comment.recipe.title %>"</p>
  </div>

  <div class="card p-6">
    <%= form_with model: @comment, url: recipe_comment_path(@comment), method: :patch, class: "space-y-4" do |form| %>
      <div class="form-group">
        <%= form.label :body, "Dein Kommentar", class: "label-field" %>
        <comment-form
          textarea-id="recipe_comment_body"
          textarea-name="recipe_comment[body]"
          :max-length="3000"
          :has-error="<%= @comment.errors.any? ? 'true' : 'false' %>"
          model-value="<%= @comment.body %>"
        ></comment-form>
        <% if @comment.errors[:body].any? %>
          <p class="form-error-message"><%= @comment.errors.full_messages_for(:body).join(', ') %></p>
        <% end %>
      </div>

      <div class="flex justify-end gap-2">
        <%= link_to "Abbrechen", recipe_path(@comment.recipe), class: "btn btn-outline" %>
        <%= form.submit "Speichern", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
