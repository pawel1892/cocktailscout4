# Example secrets file
# Copy this to:
#   - secrets-common (shared secrets)
#   - secrets.beta (beta environment)
#   - secrets.production (production environment)

# ==================
# secrets-common
# ==================
# Docker Hub username
export DOCKER_USERNAME=your_dockerhub_username

# Docker Hub registry password (create token at https://hub.docker.com/settings/security)
export KAMAL_REGISTRY_PASSWORD=your_docker_hub_token_here

# Resend API key for email delivery
export RESEND_API_KEY=resend_key

# ==================
# secrets.beta
# ==================
# Beta server IP address
export BETA_SERVER_IP=your_beta_server_ip

# Rails master key for beta (reads from config/credentials/beta.key)
export RAILS_MASTER_KEY=$(cat config/credentials/beta.key)

# MySQL root password for beta
export MYSQL_ROOT_PASSWORD=generate_strong_password_here

# Database password for beta application user
export COCKTAILSCOUT4_DATABASE_PASSWORD=generate_strong_password_here

# ==================
# secrets.production
# ==================
# Production server IP address
export PRODUCTION_SERVER_IP=your_production_server_ip

# Rails master key for production (reads from config/credentials/production.key)
export RAILS_MASTER_KEY=$(cat config/credentials/production.key)

# MySQL root password for production
export MYSQL_ROOT_PASSWORD=generate_strong_password_here

# Database password for production application user
export COCKTAILSCOUT4_DATABASE_PASSWORD=generate_strong_password_here
