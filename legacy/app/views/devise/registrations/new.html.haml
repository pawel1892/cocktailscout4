.row
  .small-12.medium-10.large-8.columns.large-offset-2.medium-offset-1
    .callout
      %h2 Registrieren
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!

        = f.text_field :login, placeholder: 'Login'
        = f.email_field :email, placeholder: 'Email'
        = f.password_field :password, placeholder: 'Passwort'
        = f.password_field :password_confirmation, placeholder: 'Passwort wiederholung'

        .row
          .small-12.columns.text-right
            = f.submit "Registrieren", :class => :button

        = render "devise/shared/links"
          