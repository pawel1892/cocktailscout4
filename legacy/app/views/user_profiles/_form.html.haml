= form_for @user_profile, :url => { :action => :update } do |f|
  .row
    .small-12.columns
      = render 'shared/form_errors', errors: @user_profile.errors[:base]

  .row
    .small-12.columns
      = f.select :gender, [['m√§nnlich', 'm'], ['weiblich', 'w']]

  .row
    .small-12.columns
      = f.text_field :prename

  .row
    .small-12.columns
      = f.text_field :public_mail

  .row
    .small-12.columns
      = f.text_field :homepage

  .row
    .small-12.columns
      = f.text_field :location

  .row
    .small-12.columns.text-right
      = f.submit 'speichern', class: 'button'
