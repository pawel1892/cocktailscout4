.nested-fields
  .row
    .small-12.medium-5.columns
      = f.collection_select :ingredient_id, Ingredient.all.order('name ASC'), :id, :name, {prompt: true}, { class: 'select2' }
    .small-12.medium-2.columns
      = f.text_field :cl_amount
    .small-12.medium-4.columns
      = f.text_field :description, placeholder: 'z.B. 3cl Orangensaft'
    .small-12.medium-1.columns
      = link_to_remove_association "entfernen", f
  .row
    .small-12.columns
      %ul.errors
        - f.object.errors.full_messages.each do |msg|
          %li= msg
