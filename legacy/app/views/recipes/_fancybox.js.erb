<script type="text/javascript">
	jQuery(document).ready(function() {
		$("a.cocktailgallery").click(function() {
			$.fancybox([
				<% @recipe_images.each do |recipe_image| %>
					{
						'href'	: '<%= recipe_image.image.url(:big) %>',
						'title'	: 'Bild von <%= User.find(recipe_image.user_id).login %>'
					},
				<% end %>
			], {
				'padding'			: 30,
				'transitionIn'		: 'none',
				'transitionOut'		: 'none',
				'type'              : 'image',
				'changeFade'        : 0
			});
		});
	});
</script>
